{
    "name": "ild78/lib-php",
    "description": "Ild78 PHP library",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "ild78\\": "src/"
        }
    },
    "require": {
        "php": ">=7.1.0",
        "guzzlehttp/guzzle": "^6.3",
        "psr/log": "^1.0"
    },
    "require-dev": {
        "atoum/atoum": "^3.3",
        "atoum/autoloop-extension": "^0.3.0",
        "atoum/json-schema-extension": "^2.1",
        "atoum/stubs": "^2.6",
        "squizlabs/php_codesniffer": "^3.3"
    },
    "suggest": {
        "monolog/monolog": "Allows to log interaction with the API"
    },
    "config": {
        "sort-packages": true
    }
}
